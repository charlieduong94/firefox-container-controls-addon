{
  "manifest_version": 2,
  "name": "container-controls",
  "version": "0.1",
  "description": "Adds keyboard shortcuts for opening containers",

  "background": {
    "scripts": [ "dist/background.bundle.js" ]
  },

  "browser_action": {
    "default_title": "Containerify",
    "default_icon": {
      "19": "assets/icons/icon.png"
    },

    "default_popup": "dist/popup.html"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "cookies",
    "contextualIdentities"
  ],

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "MacCtrl+G"
      }
    },
    "containerify-open-tab": {
      "suggested_key": {
        "default": "MacCtrl+T"
      }
    },
    "containerify-up-key": {
      "suggested_key": {
        "default": "MacCtrl+K"
      }
    },
    "containerify-down-key": {
      "suggested_key": {
        "default": "MacCtrl+J"
      }
    },
    "containerify-enter-key": {
      "suggested_key": {
        "default": "MacCtrl+O"
      }
    }
  }
}
